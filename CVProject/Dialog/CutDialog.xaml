        xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit" x:Class="CVProject.Dialog.CutDialog"
        mc:Ignorable="d"
        Title="Cut" Height="148.864" Width="300" Background="#FF363636" WindowStyle="ToolWindow" WindowStartupLocation="CenterScreen" Closing="CutDialog_Closing">
