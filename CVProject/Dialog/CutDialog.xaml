        <Label x:Name="label_Copy2" Content="Down" HorizontalAlignment="Left" Margin="10,87,0,0" VerticalAlignment="Top"/>
        <xctk:IntegerUpDown Name="down" HorizontalAlignment="Left" Margin="48,85,0,0" VerticalAlignment="Top" Width="60" Value="0" ValueChanged="ValueChanged" Minimum="0"/>
        <Button x:Name="btnOK" Content="OK" HorizontalAlignment="Left" Margin="207,10,0,0" VerticalAlignment="Top" Width="75" Click="btnOK_Click"/>
        <Button x:Name="btnCancel" Content="Cancel" HorizontalAlignment="Left" Margin="207,33,0,0" VerticalAlignment="Top" Width="75" Click="btnCancel_Click"/>

    </Grid>
</Window>
