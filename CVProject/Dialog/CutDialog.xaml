        <Label x:Name="label" Content="Left" HorizontalAlignment="Left" Margin="10,12,0,0" VerticalAlignment="Top"/>
        <xctk:IntegerUpDown Name="left" HorizontalAlignment="Left" Margin="48,10,0,0" VerticalAlignment="Top" Width="60" Value="0" ValueChanged="ValueChanged" Minimum="0"/>
        <Label x:Name="label_Copy" Content="Right" HorizontalAlignment="Left" Margin="10,37,0,0" VerticalAlignment="Top"/>
        <xctk:IntegerUpDown Name="right" HorizontalAlignment="Left" Margin="48,35,0,0" VerticalAlignment="Top" Width="60" Value="0" ValueChanged="ValueChanged" Minimum="0"/>
        <Label x:Name="label_Copy1" Content="Up" HorizontalAlignment="Left" Margin="10,62,0,0" VerticalAlignment="Top"/>
