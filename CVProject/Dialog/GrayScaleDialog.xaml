<Window x:Class="CVProject.Dialog.GrayScaleDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CVProject.Dialog"
        mc:Ignorable="d"
        Title="To grayscale image" Height="133" Width="300" Background="#FF363636" WindowStartupLocation="CenterScreen">
    <Grid>
        <RadioButton x:Name="radiobtnAuto" Content="Auto" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Checked="Checked"/>
        <RadioButton x:Name="radiobtnR" Content="Use Red Channel" HorizontalAlignment="Left" Margin="10,31,0,0" VerticalAlignment="Top" Checked="Checked"/>
        <RadioButton x:Name="radiobtnG" Content="Use Green Channel" HorizontalAlignment="Left" Margin="10,52,0,0" VerticalAlignment="Top" Checked="Checked"/>
        <RadioButton x:Name="radiobtnB" Content="Use Blue Channel" HorizontalAlignment="Left" Margin="10,73,0,0" VerticalAlignment="Top" Checked="Checked"/>
        <Button x:Name="btnOK" Content="OK" HorizontalAlignment="Left" Margin="207,10,0,0" VerticalAlignment="Top" Width="75" Click="btnOK_Click"/>
        <Button x:Name="btnCancel" Content="Cancel" HorizontalAlignment="Left" Margin="207,32,0,0" VerticalAlignment="Top" Width="75" Click="btnCancel_Click"/>

    </Grid>
</Window>
